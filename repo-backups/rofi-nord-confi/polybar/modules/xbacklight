color = ${colors.yellow}
type = internal/xbacklight

; XRandR output to get get values from
; Default: the monitor defined for the running bar
;output = eDP-1

; Create scroll handlers used to set the backlight value
; Default: true
;enable-scroll = true

; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format = <label>
format-prefix = " "

; Available tokens:
;   %percentage% (default)
label = %percentage%%

; Colors
format-prefix-foreground = ${self.color}
;format-underline = ${self.color}

; Only applies if <ramp> is used
; ramp-0 = 🌕
; ramp-1 = 🌔
; ramp-2 = 🌓
; ramp-3 = 🌒
; ramp-4 = 🌑

; Only applies if <bar> is used
;bar-width = 10
;bar-foreground = ${self.color}

;bar-indicator = ━ 
;bar-indicator-font = 1 

;bar-fill = ━ 
;bar-fill-foreground = ${serlf.color}
;bar-fill-font = 1                           

;bar-empty = ━ 
;bar-empty-font = 1 
;bar-empty-foreground = ${colors.background}

